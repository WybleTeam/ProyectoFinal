<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wyble.procesagro" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:label="@string/title_activity_web_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wyble.procesagro.MainActivity" />
        </activity>
        <activity
            android:name=".TransactActivity"
            android:label="@string/title_activity_transact" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wyble.procesagro.MainActivity" />
        </activity>
        <activity
            android:name=".CallActivity"
            android:label="@string/title_activity_call" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wyble.procesagro.MainActivity" />
        </activity>
        <activity
            android:name=".DealsActivity"
            android:label="@string/title_activity_deals" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wyble.procesagro.MainActivity" />
        </activity>
        <activity
            android:name=".ConvDetalle"
            android:label="@string/title_activity_conv_detalle" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
